<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.board.mapper.BoardMapper">
 
 	<!-- 검색 조건문 -->
    <sql id="criteria">
        <trim prefix="AND (" suffix=")" prefixOverrides="OR">
            <foreach collection="typeArr" item="type">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            title like '%'||#{keyword}||'%' 
                        </when>
                        <when test="type == 'C'.toString()">
                            content like '%'||#{keyword}||'%' 
                        </when>
                        <when test="type == 'W'.toString()">
                            writer like '%'||#{keyword}||'%' 
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    </sql>
    
 	<!-- 게시판 등록 -->
 	<insert id="enroll">
 		<selectKey resultType="int" keyProperty="bno" order="BEFORE">
			select pk_board.nextval from dual
		</selectKey>
 		insert into one_board (bno,title, content, writer) values (#{bno}, #{title}, #{content}, #{writer})
 	</insert>
 	
 	<!-- 게시판 목록 -->
 	<select id="getList" resultType="com.board.model.BoardVO">
 		select * from one_board 
 	</select>
 	
 	 <!-- 게시판 조회 -->
    <select id="getPage" resultType="com.board.model.BoardVO">
        select * from one_board where bno = #{bno}
    </select>
    
    <!-- 게시물 목록(페이징) -->
    <select id="getListPaging" resultType="com.board.model.BoardVO">
    
    <![CDATA[
        
        select bno, title, content, writer, regdate, updatedate from(
        
                select /*+INDEX_DESC(one_board pk_board) */ rownum  as rn, bno, title, content, writer, regdate, updatedate
                  
                from one_board where rownum <= #{pageNum} * #{amount} 
    ]]>            
                <if test="keyword != null">
                    <include refid="criteria"></include> 
                </if>
    
    <![CDATA[
                    
                )
                    
        where rn > (#{pageNum} -1) * #{amount}
    
    ]]>
    
    </select>
 
    <!-- 게시판 수정 -->
    <update id="modify">
        update one_board set title = #{title}, content = #{content}, updatedate = sysdate 
        where bno = #{bno}
    </update>
    
     <!-- 게시판 삭제 -->
    <delete id="delete">
        delete from one_board where bno = #{bno}
    </delete>
    
    <!-- 게시물 총 개수 -->
    <select id="getTotal" resultType="int">
    
        select count(*) from one_board
        
        <if test="keyword != null">
        
            where bno > 0 <include refid="criteria"></include>
        
        </if>
    
    </select>    
    
 
  </mapper>